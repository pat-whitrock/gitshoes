<%= form_for @issue, remote: true, url: create_issue_path do |f| %>
	
	<%= f.label :email, 'Email (optional)', style: "margin: 10px 0 10px 0;" %>
	</br>
	<%= f.text_field :email, style: "width: 100%; height: 35px; -moz-border-radius: 4px; -webkit-border-radius: 4px; border-radius: 4px; outline: 0; border: 1px solid #ccc; padding: 4px 7px; font-family: 'Open Sans', sans-serif;" %>
	</br>
	<%= f.label :title, style: "margin: 10px 0 10px 0;" %>
	</br>
	<%= f.text_field :title, style: "width: 100%; height: 35px; -moz-border-radius: 4px; -webkit-border-radius: 4px; border-radius: 4px; outline: 0; border: 1px solid #ccc; padding: 4px 7px; font-family: 'Open Sans', sans-serif;" %>
	</br>
	<%= f.label :body, 'Description', style: "margin: 10px 0 10px 0;" %>
	</br>
	<%= f.text_area :body, style: "width: 100%; height: 80px; -moz-border-radius: 4px; -webkit-border-radius: 4px; border-radius: 4px; outline: 0; border: 1px solid #ccc; padding: 4px 7px; font-family: 'Open Sans', sans-serif;" %>
	</br>
	<%= f.submit 'Add Issue', class: "feedback-submit", style: "margin: 10px 0 10px 0; background-color: #357ebd; border: 0; padding: 10px; width: 100%; -moz-border-radius: 4px; -webkit-border-radius: 4px; border-radius: 4px; color: white; font-size: 18px; font-family: 'Open Sans', sans-serif;"%>

<% end %>
