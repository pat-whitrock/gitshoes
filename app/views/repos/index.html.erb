<div class="page-header">
  <h1>Your Shoebox <small>// <%= @repos.count %> active</small>
  <%= link_to 'Add Repository', new_repo_path, class: "btn btn-primary pull-right" %></h1>
</div>


 <% @repos_array.each do |repos| %>
  <div class="row " data-equal="thumbnail">
    <% repos.each do |repo| %>
      <div class="item col-sm-6 col-md-3">
        <div class="thumbnail border-fade">
          <% image = "shoes_" + rand(1..9).to_s + ".png" %>
          <%= image_tag image, size: "200x100" %>
          <div class="caption">
            <h4><%= link_to repo.name, repo %></h4>
            <% if repo.description != "" %>
            <p><%= repo.description %></p>
            <% else %>
            <p>...</p>
            <% end %>
            <p>
              <%= link_to 'Edit', edit_repo_path(repo), class: "btn btn-primary btn-sm" %>
              <%= link_to 'Remove', delete_repo_path(repo), :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger btn-sm" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<%= javascript_tag do %>
  (function($) {

    $.fn.equalHeights = function() {
        var maxHeight = 0,
            $this = $(this);

        $this.each( function() {
            var height = $(this).innerHeight();

            if ( height > maxHeight ) { maxHeight = height; }
        });

        return $this.css('height', maxHeight);
    };

    // auto-initialize plugin
    $('[data-equal]').each(function(){
        var $this = $(this),
            target = $this.data('equal');
        $this.find(target).equalHeights();
    });

})(jQuery);;
$('.thumbnail div').equalHeights();
<% end %>