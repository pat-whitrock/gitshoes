<div class="page-header">
  <h1>Your Shoebox <small>// <%= @repos.count %> active</small>
  <%= link_to 'Add Repository', new_repo_path, class: "btn btn-primary pull-right" %></h1>
</div>




<div class="row">
  <% @repos.each do |repo| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <% image = "shoes_" + rand(1..9).to_s + ".png" %>
        <%= image_tag image, size: "200x100" %>
        <div class="caption">
          <h3><%= link_to repo.name, repo %></h3>
          <p><%= repo.description %></p>
          <p>
            <%= link_to 'Edit', edit_repo_path(repo), class: "btn btn-default btn-sm" %>
            <%= link_to 'Destroy', delete_repo_path(repo),
                :confirm => 'Are you sure?', :method => :delete, class: "btn btn-default btn-sm" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>