(function() {
  var jQuery;
  if (window.jQuery === undefined || window.jQuery.fn.jquery !== '1.11.0') {
    var script_tag = document.createElement('script');
    script_tag.setAttribute("type","text/javascript");
    script_tag.setAttribute("src", "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js");
    if (script_tag.readyState) {
      script_tag.onreadystatechange = function () { // For old versions of IE
        if (this.readyState == 'complete' || this.readyState == 'loaded') {
          scriptLoadHandler();
        }
      };
    } else {
      script_tag.onload = scriptLoadHandler;
    }
    (document.getElementsByTagName("head")[0] || document.documentElement).appendChild(script_tag);
  } else {
    jQuery = window.jQuery;
    main();
  }

  function scriptLoadHandler() {
    jQuery = window.jQuery.noConflict(true);
    main();
  }
  function main() {
    jQuery(document).ready(function($) {

      WebFontConfig = {
        google: { families: [ 'Open+Sans::latin' ] }
      };
      (function() {
        var wf = document.createElement('script');
        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
        '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
        wf.type = 'text/javascript';
        wf.async = 'true';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(wf, s);
      })();
      
      var gitshoesInsert = $("<div id='feedback-container'><div id='gitshoes-button'></div></div>");
      gitshoesInsert.css({
        "position": "fixed",
        "right": 30,
        "bottom": 0,
        "width": "300px"
      });
      gitshoesInsert.appendTo('body');

      var gitshoesFloater = $('#gitshoes-button')
      gitshoesFloater.text("Feedback");
      gitshoesFloater.css({
        "width": "auto",
        "height": "35px",
        "margin": "0px",
        "font-size": "18px",
        "text-align": "center",
        "padding": "5px 10px 5px 10px",
        "border-top-left-radius": "5px",
        "border-top-right-radius": "5px",
        "background-color": "#357ebd",
        "color": "white",
        "cursor": "pointer",
        "float": "right"
      });


      var gitshoesFormDiv = $("<div id='gitshoes-form'></div>");
      gitshoesFormDiv.css({
        "padding": "5px 20px 5px 20px",
        "background-color": "white",
        "width": "300px",
        "float": "right",
        "border": "1px solid #9a9a9a",
        "border-top-left-radius": "5px"
      });
      gitshoesFormDiv.appendTo('#feedback-container');

      //save formDiv in a variable
      var formDiv = jQuery('#gitshoes-form')

      // ajax starts here
      var gitshoesFormUrl = "<%= new_issue_url(@repo) %>";
      jQuery.ajax({
        url:       gitshoesFormUrl,
        dataType:  "html",
        success:   function(data) {
          formDiv.css({ "display": "none"});
          formDiv.html(data);
          jQuery('#new_issue').on("ajax:success", function(e, data, status, xhr){
            formDiv.slideUp();
            jQuery('#issue_email').val("");
            jQuery('#issue_title').val("");
            jQuery('#issue_body').val("");
            jQuery('#issue_body').val("");
            jQuery('#gitshoes-button').fadeOut().html('Thank you!').delay(500).fadeIn();
          });
        }
      });

      // click event for slide up or slide down
      jQuery('div#gitshoes-button').on('click', function() { 
        if (jQuery('#gitshoes-button').html() == 'Thank you!'){
          jQuery('#gitshoes-button').html('Feedback');
        };

        if(formDiv.css("display") == "none"){
          formDiv.slideDown();
        } else {
          formDiv.slideUp();
        }
      });


    });
  }
})();